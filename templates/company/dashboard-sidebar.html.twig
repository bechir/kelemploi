{% import 'util/util.twig' as util %}

<div class="dashboard-sidebar">
    <div class="company-info">
        <div class="thumb">
            <img alt="" class="img-fluid" src="/dashboard/images/company-logo.png">
        </div>
        <div class="company-body">
            <h5>{{ company ? company.name|capitalize : '-' }}</h5>
            <span>@{{ app.user.username }}</span>
        </div>
    </div>
    <div class="profile-progress">
        <div class="progress-item">
            <div class="progress-head">
                <p class="progress-on">Profile</p>
            </div>
            <div class="progress-body">
                <div class="progress">
                    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="70" class="progress-bar" role="progressbar" style="width: 0;"></div>
                </div>
                <p class="progress-to">70%</p>
            </div>
        </div>
    </div>
    <div class="dashboard-menu">
        <ul>
            <li {% if active == 'dashboard' %}class="active"{% endif %}>
                <i class="fas fa-home"></i>
                <a href="{{ path('company_dashboard') }}">{{ 'employer.dashboard'|trans }}</a>
            </li>
            <li {% if active == 'edit-profile' %}class="active"{% endif %}>
                <i class="fas fa-user"></i>
                <a href="{{ path('company_edit_profile') }}">{{ 'employer.edit_profile'|trans }}</a>
            </li>
            <li {% if active == 'manage-jobs' %}class="active"{% endif %}>
                <i class="fas fa-briefcase"></i>
                <a href="{{ path('company_manage_jobs') }}">{{ 'employer.manage_jobs'|trans }}</a>
            </li>
            <li {% if active == 'manage-candidates' %}class="active"{% endif %}>
                <i class="fas fa-users"></i>
                <a href="{{ path('company_manage_candidates') }}">{{ 'employer.manage_candidates'|trans }}</a>
            </li>
            <li {% if active == 'shortlisted' %}class="active"{% endif %}>
                <i class="fas fa-heart"></i>
                <a href="#">{{ 'employer.shortlisted_resumes'|trans }}</a>
            </li>
            <li {% if active == 'post-job' %}class="active"{% endif %}>
                <i class="fas fa-plus-square"></i>
                <a href="{{ path('application_create') }}">{{ 'employer.post_new_job'|trans }}</a>
            </li>
            <li {% if active == 'messages' %}class="active"{% endif %}>
                <i class="fas fa-comment"></i>
                <a href="{{ path('company_messages') }}">{{ 'employer.message'|trans }}</a>
            </li>
            <li {% if active == 'pricing' %}class="active"{% endif %}>
                <i class="fas fa-calculator"></i>
                <a href="{{ path('company_pricing') }}">{{ 'layout.pricing'|trans }}</a>
            </li>
        </ul>
        <ul class="delete">
            <li>
                <i class="fas fa-power-off"></i>
                <a href="{{ path('fos_user_security_logout') }}">{{ 'user.logout'|trans }}</a>
            </li>
            <hr>
            <li>
                <i class="fas fa-trash-alt"></i>
                <a data-target="#modal-delete" data-toggle="modal" href="#">{{ 'user.delete_account.title'|trans }}</a>
            </li>
        </ul>
        <!-- Modal -->
        <div aria-hidden="true" class="modal fade modal-delete" id="modal-delete" role="dialog" tabindex="-1">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <h4>
                            <i data-feather="trash-2"></i>{{ 'user.delete_account.title'|trans }}</h4>
                        <p>{{ 'user.delete_account.confirm_text'|trans }}</p>
                        <form action="#" method="POST" data-confirmation="true">
                            <div class="form-group">
                                <input class="form-control" placeholder="{{ 'form.password'|trans }}" type="password">
                            </div>
                            <div class="buttons">
                                <button class="delete-button">{{ 'word.delete'|trans }}</button>
                                <button data-dismiss="modal">{{ 'word.cancel'|trans }}</button>
                            </div>
                            <div class="form-group form-check">
                                <input checked="checked" class="form-check-input" type="checkbox">
                                <label class="form-check-label">
                                    {{ util.acceptTermsConditions() }}
                                </label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
