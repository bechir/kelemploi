{% set in_list = ['pendings', 'jobs-list', 'contests-list'] %}
{% set in_settings = ['featured', 'resume-of-week', 'testimonials', 'banner-ad', 'emails', 'admin-users'] %}
{% set in_create = ['new-company', 'new-user', 'new-job', 'new-contest'] %}


<div id="sidebar-nav" class="sidebar">
    <div class="sidebar-scroll">
        <nav>
            <ul class="nav">
                <li><a href="{{ path('admin_index') }}" {% if active == 'index' %} class="active" {% endif %}>
                    <i class="lnr lnr-home"></i> <span>Tableau de bord</span></a>
                </li>
                <li><a href="{{ path('admin_blog_index') }}" {% if active == 'blog_index' %} class="active" {% endif %}>
                    <i class="fa fa-newspaper-o"></i> <span>Blog</span></a>
                </li>
                <li><a href="{{ path('admin_users') }}" {% if active == 'users' %} class="active" {% endif %}>
                    <i class="lnr lnr-users"></i> <span>Utilisateurs</span></a>
                </li>
                <li><a href="{{ path('admin_resumes_list') }}" {% if active == 'validated_resumes' %} class="active" {% endif %}>
                    <i class="lnr lnr-database"></i> <span>Base CV</span></a>
                </li>
                <li>
                    <a {% if active in in_list %}class="active" aria-expanded="true"{% else %}class="collapsed"{% endif %} data-toggle="collapse" href="#ads">
                        <i class="lnr lnr-list"></i>
                        <span>Offres</span>
                        <i class="icon-submenu lnr lnr-chevron-left"></i>
                    </a>
                    <div class="collapse{% if active in in_list %} in{% endif %}" id="ads">
                        <ul class="nav">
                            <li><a href="{{ path('admin_jobs_list') }}" {% if active == 'jobs-list' %} class="active" {% endif %}>
                                <span>Emploi en cours</span></a>
                            </li>
                            <li><a href="{{ path('admin_pendings') }}" {% if active == 'pendings' %} class="active" {% endif %}>
                                <span>Emploi en attentes</span></a>
                            </li>
                            <li><a href="{{ path('admin_contests_list') }}" {% if active == 'contests-list' %} class="active" {% endif %}>
                                <span>Concours</span></a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li><a href="{{ path('admin_companies_list') }}" {% if active == 'companies' %} class="active" {% endif %}>
                    <i class="lnr lnr-briefcase"></i> <span>Organisations</span></a>
                </li>
                <li>
                    <a {% if active in in_create %}class="active" aria-expanded="true"{% else %}class="collapsed"{% endif %} data-toggle="collapse" href="#newAd">
                        <i class="lnr lnr-plus-circle"></i>
                        <span>Ajouter</span>
                        <i class="icon-submenu lnr lnr-chevron-left"></i>
                    </a>
                    <div class="collapse{% if active in in_create %} in{% endif %}" id="newAd">
                        <ul class="nav">
                            <li><a href="{{ path('admin_job_create') }}" {% if active == 'new-job' %} class="active" {% endif %}>
                                <span><i class="lnr lnr-bullhorn"></i> Offre d'emploi</span></a>
                            </li>
                            <li><a href="{{ path('admin_contest_create') }}" {% if active == 'new-contest' %} class="active" {% endif %}>
                                <i class="lnr lnr-user"></i> <span> Concours</span></a>
                            </li>
                            {% if is_granted('ROLE_RESUMES_MANAGER') %}
                                <li><a href="{{ path('admin_company_create') }}" {% if active == 'new-company' %} class="active" {% endif %}>
                                    <span><i class="lnr lnr-briefcase"></i> Organisation</span></a>
                                </li>
                            {% endif %}
                            <li><a href="{{ path('admin_user_create') }}" {% if active == 'new-user' %} class="active" {% endif %}>
                                <i class="lnr lnr-user"></i> <span> Utilisateur</span></a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a {% if active in in_settings %}class="active" aria-expanded="true"{% else %}class="collapsed"{% endif %} data-toggle="collapse" href="#settings">
                        <i class="lnr lnr-cog"></i>
                        <span>Paramètres</span>
                        <i class="icon-submenu lnr lnr-chevron-left"></i>
                    </a>
                    <div class="collapse{% if active in in_settings %} in{% endif %}" id="settings">
                        <ul class="nav">
                            <li><a href="{{ path('admin_settings_featured') }}" {% if active == 'featured' %} class="active" {% endif %}>
                                <span><i class="lnr lnr-star fa-lg"></i> Offres à la une</span></a>
                            </li>
                            <li><a href="{{ path('admin_settings_resume_of_week') }}" {% if active == 'resume-of-week' %} class="active" {% endif %}>
                                <span><i class="lnr lnr-pushpin fa-lg"></i> CV de la semaine</span></a>
                            </li>
                            <li><a href="{{ path('admin_settings_banner_ad') }}" {% if active == 'banner-ad' %} class="active" {% endif %}>
                                <span><i class="lnr lnr-layers fa-lg"></i> Bannière publicitaire</span></a>
                            </li>
                            <li><a href="{{ path('admin_settings_testimonials') }}" {% if active == 'testimonials' %} class="active" {% endif %}>
                                <span><i class="fa fa-comments-o fa-lg"></i> Témoignages</span></a>
                            </li>
                            {# <li><a href="{{ path('admin_settings_emails') }}" {% if active == 'emails' %} class="active" {% endif %}>
                                <span><i class="lnr lnr-envelope fa-lg"></i> Envoie d'e-mails</span></a>
                            </li> #}
                            <li><a href="{{ path('admin_settings_admin_users') }}" {% if active == 'admin-users' %} class="active" {% endif %}>
                                <span><i class="lnr lnr-users fa-lg"></i> Administrateurs</span></a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li><a href="{{ path('admin_jobs_list_archived') }}" {% if active == 'archives' %} class="active" {% endif %}>
                    <i class="fa fa-archive"></i> <span>Archives</span></a>
                </li>
            </ul>
        </nav>
    </div>
</div>
<!-- END LEFT SIDEBAR -->
