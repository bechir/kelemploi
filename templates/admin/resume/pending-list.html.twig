{% extends 'admin/base.html.twig' %}
{% block left_sidebar %}
    {% include 'admin/common/left-sidebar.twig' with { active: 'pending_resumes' } %}
{% endblock %}

{% block main %}
<h3 class="page-title text-info"><span class="lnr lnr-database"></span> Base CV <span class="badge badge-info mb-1">{{ resumes|length }}</span></h3></h3>
<div class="row">
    <div class="col-md-12">
        <!-- TABLE STRIPED -->
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Liste des CV à valider</h3>
            </div>
            <div class="panel-body">
                {% include 'admin/resume/table.html.twig' with {resumes: resumes} %}
            </div>
            <div class="panel-footer">
                 <!-- Page navigation start -->
                  <nav aria-label="Page navigation">
                      <ul class="pagination">
                      {% if resumes.haveToPaginate %}
                          {{ pagerfanta(
                                    resumes,
                                    'twitter_bootstrap3_translated',
                                    { routeName: 'admin_resumes_list_pending',
                                          routeParams: app.request.query.all,
                                          prev_message: 'Précédant',
                                          next_message: 'Suivant',
                                          page_template: '<li><a href="%href%" %rel%>%text%</a></li>'
                                    }
                               )
                          }}
                      {% else %}
                            <li><button type="button" class="btn btn-default disabled">1</button> </li>
                      {% endif %}
                      </ul>
                  </nav>
                  <!-- Page navigation end -->
            </div>
        </div>
        <!-- END TABLE STRIPED -->
        </div>
    </div>
</div>

{% endblock %}
