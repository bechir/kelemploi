{% extends 'user/base.html.twig' %}

{% trans_default_domain 'user' %}

{% block content %}
    {{ form_start(form, {'attr': { 'class': 'dashboard-form job-post-form' } }) }}
        <div class="dashboard-section upload-profile-photo">
            <div class="update-photo">
                <img alt="" class="image" src="/dashboard/images/user-1.jpg">
            </div>
            <div class="file-upload">
                <input class="file-input" type="file">{{ 'form.edit_avatar'|trans }}
            </div>
        </div>
        <div class="dashboard-section basic-info-input">
            <h4><i data-feather="user-check"></i>{{ 'form.edit_infos'|trans }}</h4>
            {% if not form.vars.valid %}
                <div class="form-group row">
                    {% for children in form.children %}
                        {% if not children.vars.valid %}
                            <div class="alert alert-danger">
                                {% if children.first is defined %}
                                    {{ form_errors(children.first) }}
                                {% else %}
                                    {{ form_errors(children) }}
                                {% endif %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">{{ 'form.first_name'|trans }}</label>
                <div class="col-sm-9">
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}})}}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">{{ 'form.last_name'|trans }}</label>
                <div class="col-sm-9">
                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}})}}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">{{ 'form.username'|trans }}</label>
                <div class="col-sm-9">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}})}}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">{{ 'form.civility'|trans }}</label>
                <div class="col-sm-9">
                    {{ form_widget(form.civility, {'attr': {'class': 'form-control'}})}}
                    <i class="fa fa-caret-down"></i>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">{{ 'form.email'|trans }}</label>
                <div class="col-sm-9">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'disabled':''}})}}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">{{ 'form.phone'|trans }}</label>
                <div class="col-sm-9">
                    {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}})}}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">{{ 'form.region'|trans }}</label>
                <div class="col-sm-9">
                    {{ form_widget(form.region, {'attr': {'class': 'form-control'}})}}
                    <i class="fa fa-caret-down"></i>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">{{ 'form.expertise.label'|trans }}</label>
                <div class="col-sm-9">
                    <input class="form-control" placeholder="{{ 'form.expertise.placeholder'|trans }}" type="text">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">{{ 'form.about_user.label'|trans }}</label>
                <div class="col-sm-9">
                    {{ form_widget(form.about, {'attr': {'class': 'form-control', 'placeholder': 'form.about_user.placeholder'|trans }})}}
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <button type="submit" class="button">{{ 'form.save_change'|trans }}</button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

