{% trans_default_domain 'user' %}

<div class="dashboard-sidebar">
    <div class="user-info">
        <div class="thumb">
            {% if app.user.avatar %}
                <img alt="{{ app.user.fullName }} Photo" class="img-fluid" src="{{ vich_uploader_asset(app.user.avatar, 'avatarFile') }}">
            {% else %}
                <img alt="No image" class="img-fluid" src="{{ asset('images/account/default-avatar-profile.jpg') }}">
            {% endif %}
        </div>
        <div class="user-body">
            <h5>{{ user.fullname }}</h5>
            <span>@{{ user.username }}</span>
        </div>
    </div>
    <div class="profile-progress">
        <div class="progress-item">
            <div class="progress-head">
                <p class="progress-on">{{ 'word.profile'|trans({}, 'messages') }}</p>
            </div>
            <div class="progress-body">
                <div class="progress">
                    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="70" class="progress-bar" role="progressbar" style="width: 0;"></div>
                </div>
                <p class="progress-to">70%</p>
            </div>
        </div>
    </div>
    <div class="dashboard-menu">
        <ul>
            <li {% if active == 'dashboard' %}class="active"{% endif %}>
                <i class="fas fa-home"></i>
                <a href="{{ path('user_dashboard') }}">{{ 'employer.dashboard'|trans({}, 'messages') }}</a>
            </li>
            <li {% if active == 'edit-profile' %}class="active"{% endif %}>
                <i class="fas fa-user"></i><a href="{{ path('user_profile_edit') }}">{{ 'edit_profile'|trans }}</a>
            </li>
            <li {% if active == 'resume' %}class="active"{% endif %}>
                <i class="fas fa-file-alt"></i><a href="{{ path('resume') }}">{{ 'resume'|trans }}</a>
            </li>
            <li {% if active == 'edit-resume' %}class="active"{% endif %}>
                <i class="fas fa-edit"></i><a href="{{ path('edit_resume') }}">{{ 'edit_resume'|trans }}</a>
            </li>
            <li {% if active == 'bookmarked' %}class="active"{% endif %}>
                <i class="fas fa-heart"></i><a href="{{ path('user_bookmarked') }}">{{ 'bookmarked'|trans }}</a>
            </li>
            <li {% if active == 'applied-jobs' %}class="active"{% endif %}>
                <i class="fas fa-check-square"></i><a href="{{ path('user_applied') }}">{{ 'applied_jobs'|trans }}</a>
            </li>
            <li {% if active == 'messages' %}class="active"{% endif %}>
                <i class="fas fa-comment"></i><a href="{{ path('user_messages') }}">{{ 'messages'|trans }}</a>
            </li>
        </ul>
        <ul class="delete">
            <li>
                <i class="fas fa-power-off"></i>
                <a href="{{ path('fos_user_security_logout') }}">{{ 'user.logout'|trans({}, 'messages') }}</a>
            </li>
            <hr>
            <li>
                <i class="fas fa-trash-alt"></i>
                <a data-target="#modal-delete" data-toggle="modal" href="#">{{ 'user.delete_account.title'|trans({}, 'messages') }}</a>
            </li>
        </ul>

        {# Delete account modal #}
        {% include 'common/delete-account-modal.html.twig' %}
    </div>
</div>
