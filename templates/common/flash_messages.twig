<div class="alert-wrap dismissable-alert">
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="jy-alert {{ type }}-alert" role="alert">
                <div class="icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <p>{{ message|trans }}</p>
                <div class="close_">
                    <a href="#">
                        <i class="fas fa-times"></i>
                    </a>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
