{% set request_region = app.request.get('region', '') %}
{% set request_category = app.request.get('c', '') %}

<div class="{{ type }}-filter-wrapper">
  <div class="selected-options same-pad">
    <div class="selection-title">
      <h4>Sélection</h4>
      <a href="#">Effacer tous</a>
    </div>
    <ul class="filtered-options">
    </ul>
  </div>
  <div class="{{ type }}-filter-dropdown same-pad category">
    <select class="selectpicker job-category-filter">
      <option value="" selected>Catégorie</option>
      {% set categories = categoriesCount() %}
      {% for category, key in categories %}
          <option {% if request_category == category %}selected{% endif %} value="{{ category }}">{{ category|trans({}, 'jobs-categories') }}</option>
      {% endfor %}
    </select>
  </div>
  <div class="{{ type }}-filter-dropdown same-pad location">
    <select class="selectpicker">
      <option value="" selected>Région</option>
      {% set regions = regionsCount() %}
      {% for region, key in regions %}
          <option {% if request_region == region %}selected{% endif %} value="{{ region }}">{{ region|trans({}, 'regions') }}</option>
      {% endfor %}
    </select>
  </div>
  <div data-id="{{ type }}-type" class="{{ type }}-filter {{ type }}-type same-pad">
    <h4 class="option-title">Type de contrat</h4>
    <ul>
      <li class="full-time"><i data-feather="clock"></i><a href="#" data-attr="CDD">CDD</a></li>
      <li class="part-time"><i data-feather="clock"></i><a href="#" data-attr="CDI">CDI</a></li>
      <li class="freelance"><i data-feather="clock"></i><a href="#" data-attr="Freelance">Freelance</a></li>
      <li class="temporary"><i data-feather="clock"></i><a href="#" data-attr="Stage">Stage</a></li>
    </ul>
  </div>
  <div data-id="experience" class="{{ type }}-filter experience same-pad">
    <h4 class="option-title">Expérience</h4>
    <ul>
      <li><a href="#" data-attr="Aucune">Aucune</a></li>
      <li><a href="#" data-attr="Moins d'un an">Moins d'un an</a></li>
      <li><a href="#" data-attr="2 Ans">2 Ans</a></li>
      <li><a href="#" data-attr="3 Ans">3 Ans</a></li>
      <li><a href="#" data-attr="4 Ans">4 Ans</a></li>
      <li><a href="#" data-attr="5 Ans">5 Ans</a></li>
      <li><a href="#" data-attr="Plus de 5 Ans">Plus de 5 Ans</a></li>
    </ul>
  </div>
