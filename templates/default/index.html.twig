{% extends 'base.html.twig' %}

{% block title %}{{ website.name }} | Offres d'emploi et de stages au Sénégal{% endblock %}

{% block main %}

{% set categories_count = categoriesCount() %}
    <!-- Banner -->
    <div class="banner banner-3 banner-3-bg">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="banner-content">
            <h1 class="reveal-1 w-75">Des offres d'empoi et de stages partout au Sénégal</h1>
              <p class="reveal-2">Trouvez rapidement l'emploi qui vous correspond le mieux!</p>
              
              {% if is_granted('ROLE_EMPLOYER') %}
                <a href="{{ path('applications_list') }}" class="button reveal-3 py-3 px-4">Voir les offres</a>
              {% else %}
                <a href="{{ path('add_resume') }}" class="button reveal-3 py-3 px-4">Ajoutez votre CV</a>
              {% endif %}              
            </div>
          </div>
        </div>
      </div>
    </div>
